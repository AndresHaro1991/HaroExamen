<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HaroExamen.MainPage">

    <StackLayout>
        <Frame BackgroundColor="WhiteSmoke" Padding="24" CornerRadius="0">
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" HeightRequest="400" HorizontalOptions="Center"/>
        </Frame>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Text="Usuario: " Grid.Row="0" Grid.Column="0"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario" Grid.Row="0" Grid.Column="1"/>
            <Label Text="Contraseña: " Grid.Row="1" Grid.Column="0"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese contraseña" IsPassword="True" Grid.Row="1" Grid.Column="1"/>
        </Grid>
        <Button x:Name="btnIngresar" Text="Iniciar Sesion" Clicked="btnIngresar_Clicked"/>



    </StackLayout>

</ContentPage>
